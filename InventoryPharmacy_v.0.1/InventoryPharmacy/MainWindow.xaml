<Window x:Class="InventoryPharmacy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryPharmacy"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Width="900" Height="600" Cursor="" WindowStyle="ToolWindow" Icon="Resource/logo.png">
    <Grid>
        <StackPanel Width="350" Margin="35" VerticalAlignment="Center">
            <Image Width="200" Source="/Resource/logo.png"/>
            <TextBox x:Name="loginTextBox" FontSize="20" Margin="0, 5" materialDesign:HintAssist.Hint="Логин" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <TextBox x:Name="passwordTextBox" FontSize="20" Margin="0, 5" materialDesign:HintAssist.Hint="Пароль" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <Button x:Name="loginButton" Content="Войти" FontSize="20" Margin="0, 10" FontWeight="Medium" Height="45"/>
        </StackPanel>
    </Grid>
</Window>
